<?xml version="1.0" encoding="utf-8"?>

<resources>

    <attr name="lineWidth" format="dimension" />

    <attr name="lineColor" format="color" />

    <attr name="stokesColor" format="color" />

    <attr name="isDrawLine" format="boolean" />

    <declare-styleable name="CEditText">

        <attr name="height" format="dimension" />

        <attr name="count" format="integer" />

        <attr name="lineWidth" />

        <attr name="lineColor" />

        <attr name="focusLineColor" format="color" />

        <attr name="stokesColor" />

        <attr name="focusStokeColor" format="color" />

        <attr name="spaceWidth" format="dimension" />

        <attr name="textColor" format="color" />

        <attr name="textSize" format="dimension" />

        <attr name="circleRadius" format="dimension" />

        <attr name="circleColor" format="color" />

        <attr name="isDrawCircle" format="boolean" />

        <attr name="isDrawLine"/>

    </declare-styleable>

    <declare-styleable name="RoundImageView">
        <attr name="shape_mode" format="enum">
            <enum name="round_rect" value="1" />
            <enum name="circle" value="2" />
        </attr>
        <attr name="round_radius" format="dimension" />
    </declare-styleable>



    <declare-styleable name="CProgressBar">

        <attr name="lineWidth" />

        <attr name="lineColor" />

        <attr name="stokesColor" />

        <attr name="isDrawLine"/>

        <attr name="corners" format="dimension" />

    </declare-styleable>
    <declare-styleable name="UpdataAPPProgressBar">
        <attr name="updataAPPReachedBarColor" format="color" />
        <attr name="updataAPPUnreachedBarColor" format="color" />
        <attr name="updataAPPTextColor" format="color" />
        <attr name="updataAPPBarHeight" format="dimension"/>
        <attr name="updataAPPMax" format="integer" />
        <attr name="updataAPPProgress" format="integer" />
        <attr name="updataAPPSuffix" format="string" />
        <attr name="updataAPPPrefix" format="string" />
        <attr name="updataAPPTextVisibility" format="boolean"/>
    </declare-styleable>
</resources>